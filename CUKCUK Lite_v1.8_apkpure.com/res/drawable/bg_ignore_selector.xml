<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/negative_btn_text_color" />
            <corners android:radius="@dimen/scv_radius_default" />
            <stroke android:width="0.5dip" android:color="@android:color/black" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/negative_btn_text_color" />
            <corners android:radius="@dimen/scv_radius_default" />
            <stroke android:width="0.5dip" android:color="@android:color/black" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/background_color_gray" />
            <corners android:radius="@dimen/scv_radius_default" />
            <stroke android:width="0.5dip" android:color="@android:color/black" />
        </shape>
    </item>
</selector>